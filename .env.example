# Environnement
NODE_ENV=production

# Ports
PORT=3000
FRONTEND_PORT=8080

# PostgreSQL
PG_HOST=postgres
PG_PORT=5432
PG_DATABASE=playmarket
PG_USER=playmarket_user
PG_PASSWORD=change_me_secure_password

# MongoDB
MONGODB_URI=mongodb://mongo:27017/playmarket
